package me.p2p;

import java.io.BufferedReader;
import java.io.DataOutputStream;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.Socket;
import java.net.UnknownHostException;

import me.p2p.constant.PeerPort;

public class PeerMain {
	final static String TAG = "PeerMain";

	static String data = "{\"msg_type\":\"join\", \"data\":{\"address\":\"0.0\", \"port\":\"5060\"}}";
	public static void main(String[] args) {
		try {
			Socket socket = new Socket("127.0.0.1",
					PeerPort.PORT_BOOTSTRAP);
			DataOutputStream dtos = new DataOutputStream(
					socket.getOutputStream());
			String input = null;

			BufferedReader br = new BufferedReader(new InputStreamReader(
					System.in));
			// gui 10 lan;
			for (int i = 0; i < 10; i++) {
				// send start_msg;
				dtos.writeBytes(MsgProtocol.START_MSG);
				dtos.flush();
				
				// send data;
				dtos.writeBytes(data);
				dtos.flush();
				
				// send end_msg;
				dtos.writeBytes(MsgProtocol.END_MSG);
				dtos.flush();
				
				// sleep 500;
				try {
					Thread.sleep(3000);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
			
//			while (true) {
//				input = br.readLine();
//				if (input.equals("exit")) {
//					System.out.println(TAG + ": Exit Command");
//					socket.close();
//					break;
//				} else {
////					System.out.println(TAG + ": " + input);
//					dtos.writeBytes(input + "\n");
//					dtos.flush();
//				}
//			}
		} catch (UnknownHostException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
