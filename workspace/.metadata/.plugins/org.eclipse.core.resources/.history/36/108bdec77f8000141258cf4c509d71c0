package me.p2p.spec;

import java.util.ArrayList;

import me.p2p.PeerInfo;

public interface IData {
	/**
	 * Lấy danh sách thông tin peer
	 * @return
	 */
	public ArrayList<PeerInfo> getListPeerInfo();
	
	/**
	 * Thêm một thông tin peer trong danh sách
	 * @param peerInfo
	 */
	public void add(PeerInfo peerInfo);
	
	/**
	 * Xóa một thông tin peer trong danh sách
	 * @param peerInfo
	 */
	public void remove(PeerInfo peerInfo);
	
	/**
	 * Cập nhật thông tin peer trong danh sách
	 * @param peerInfo
	 */
	public void update(PeerInfo peerInfo);
	
	/**
	 * Kiểm tra thử thông tin peer có tồn tại hay chưa?
	 * @param peerInfo
	 * @return
	 */
	public boolean isExist(PeerInfo peerInfo);
}
