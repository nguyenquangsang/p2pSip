package me.p2p;

import org.json.JSONException;
import org.json.JSONObject;

public class PeerInfoParser {
	PeerInfo peerInfo;
	JSONObject jsPeerInfo;
	
	public PeerInfoParser() {
	}
	
	public PeerInfoParser(JSONObject data) {
		jsPeerInfo = data;
		
		parse();
	}
	
	private void parse() {
		peerInfo = new PeerInfo();
		try {
			peerInfo.address = jsPeerInfo.getString(PeerInfoAttribute.PEER_ADDRESS);
		} catch (JSONException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		try {
			peerInfo.userName = jsPeerInfo.getString(PeerInfoAttribute.PEER_USER_NAME);
		} catch (JSONException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	public void pare(JSONObject data) {
		
	}
	
	public PeerInfo getPeerInfo() {
		return this.peerInfo;
	}
}
