package me.p2p.request;

import java.io.DataOutputStream;
import java.io.IOException;
import java.net.Socket;

public class Respone {
	DataOutputStream dtos;
	Socket socket;
	
	public Respone(Socket socket) {
		this.socket = socket;
		
		try {
			this.dtos = new DataOutputStream(this.socket.getOutputStream());
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	public void sendOkRespone() {
		dtos.writeBytes(RequestBuilder.build(RequestType.OK));
	}
	
	public interface IRespone {
		public void onServerOk();
	}
}
